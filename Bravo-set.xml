<PropertyList>

<sim>
    <description>Cessna Citation-Bravo - 3d cockpit (YASim) </description>
    <author>Syd Adams</author>
    <status>development</status>
    <flight-model>yasim</flight-model>
    <aero>Citation-Bravo-yasim</aero>
    <fuel-fraction>0.8</fuel-fraction>
    <startup>
        <splash-texture>Aircraft/Citation-Bravo/Bravo-splash.rgb</splash-texture>
    </startup>
   
    <view n="0">
        <name>Cockpit</name>
        <type>lookfrom</type>
        <internal type="bool">true</internal>
        <config>
            <x-offset-m type="double">-0.27</x-offset-m>
            <y-offset-m type="double">1.0</y-offset-m>
            <z-offset-m type="double">3.1</z-offset-m>
            <pitch-offset-deg>-12</pitch-offset-deg>
            <default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
        </config>
    </view>

    <view n="1">
        <config>
            <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
            <pitch-offset-deg>5</pitch-offset-deg>
        </config>
    </view>
        
    <view n="2">
        <config>
            <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
            <pitch-offset-deg>5</pitch-offset-deg>
        </config>
    </view>
    
    <view n="3">
        <config>
            <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
        </config>
    </view>
        
    <view n="4">
        <config>
            <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
        </config>
    </view>
        
    <view n="5">
        <config>
            <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
        </config>
    </view>
        
    <view n="6">
        <config>
            <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
        </config>
    </view>
        
    <allow-toggle-cockpit>true</allow-toggle-cockpit>
        
    <systems>
        <electrical>
            <path></path>
        </electrical>
        <autopilot>
            <path>Aircraft/Citation-Bravo/Citation-autopilot.xml</path>
        </autopilot>
    </systems>
    
    <sound>
        <path>Aircraft/Citation-Bravo/Citation-Bravo-sound.xml</path>
    </sound>
    
    <hud>
        <enable3d>false</enable3d>
    </hud>
    
    <virtual-cockpit archive="y">true</virtual-cockpit>
  
    <help>
        <title>Cessna 550B Citation-Bravo</title>
        <line></line>
        <key>
            <name>Keypad Delete</name>
            <desc>toggle thrust reversers</desc>
        </key>
        <key>
            <name>Control B</name>
            <desc>Speedbrakes</desc>
        </key>
        <key>
            <name>Control D</name>
            <desc>open/close cabin door</desc>
        </key>
        <key>
            <name>y</name>
            <desc>Toggle yokes on / off</desc>
        </key>
    </help>

    <model>
        <path>Aircraft/Citation-Bravo/Models/Bravo.xml</path>
        <Bravo>
            <n1 n="0" type="double">0</n1>
            <n1 n="1" type="double">0</n1>
            <n2 n="0" type="double">0</n2>
            <n2 n="1" type="double">0</n2>
            <start-cycle n="0" type="bool">0</start-cycle>
            <start-cycle n="1" type="bool">0</start-cycle>
        </Bravo>
    </model>

    <weight n="0">
        <name>Crew</name>
        <weight-lb>180</weight-lb> 
        <max-lb>400</max-lb>
        <min-lb>120</min-lb>
    </weight>

    <weight n="1">
        <name>Passengers</name>
        <weight-lb>700</weight-lb>
        <max-lb>1200</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="2">
        <name>Front Baggage</name>
        <weight-lb>100</weight-lb>
        <max-lb>310</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="3">
        <name>Rear Baggage</name>
        <weight-lb>100</weight-lb>
        <max-lb>500</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <replay>
        <disable>1</disable>
    </replay>

    <multiplay>
        <chat_display>1</chat_display>
    </multiplay>

    <flaps>
        <setting>0.00</setting> <!-- Cruise -->
        <setting>0.375</setting> <!-- Appr / Takeoff  15-->
        <setting>0.75</setting> <!-- Land  30-->
        <setting>1.0</setting> <!-- Ground Only  40-->
    </flaps>

    <yokes-visible type="bool">1</yokes-visible>

   <tutorials>
        <tutorial include="Tutorials/startup_tutorial.xml"/>
    </tutorials>
</sim>

    <controls>
        <gear>
            <brake-parking>1</brake-parking>
        </gear>
        <electric>
            <engine n="0">
                <generator type="bool">0</generator>
            </engine>
            <engine n="1">
                <generator type="bool">0</generator>
            </engine>
            <avionics-switch type="bool">1</avionics-switch>
            <battery-switch type="bool">0</battery-switch>
            <inverter-switch type="bool">0</inverter-switch>
        </electric>
        <lighting>
            <instrument-lights type="bool">1</instrument-lights>
            <beacon type="bool">1</beacon>
            <strobe type="bool">1</strobe>
            <nav-lights type="bool">1</nav-lights>
        </lighting>
        <engines>
            <engine n="0">
                <throttle-lever type="double">0</throttle-lever>
                <cutoff>1</cutoff><!--  cutoff = 0 : Start with engines running-->
                <ignition>0</ignition>
            </engine>
            <engine n="1">
                <throttle-lever type="double">0</throttle-lever>
                <cutoff>1</cutoff><!--  cutoff = 0 : Start with engines running-->
                <ignition>0</ignition>
            </engine>
        </engines>
    </controls>

    <engines>
        <engine n="0">
            <running>false</running>
        </engine>
        <engine n="1">
            <running>false</running>
        </engine>
    </engines>

    <nasal>
        <Bravo>
            <file>Aircraft/Citation-Bravo/Nasal/Bravo.nas</file>
            <file>Aircraft/Citation-Bravo/Nasal/Electrical.nas</file>
            <file>Aircraft/Citation-Bravo/Nasal/flightdirector.nas</file>
            <file>Aircraft/Instruments-3d/primus-1000/Primus1000.nas</file>
            <file>Aircraft/Generic/annunciator.nas</file>
        </Bravo>
    </nasal>

    <input>
        <keyboard>
            <key n="127">
                <name>Delete</name>
                <desc>Toggle Reversers</desc>
                <binding>
                    <command>property-toggle</command>
                    <property>controls/engines/engine[0]/reverser</property>
                </binding>
                <binding>
                    <command>property-toggle</command>
                    <property>controls/engines/engine[1]/reverser</property>
                </binding>
            </key>
            <key n="4">
                <name>Ctrl-D</name>
                <desc>Open/close canopy</desc>
                <binding>
                    <command>nasal</command>
                    <script>Bravo.cabin_door.toggle()</script>
                </binding>
            </key>
            <key n="121">
                <name>y</name>
                <desc>Toggle yokes</desc>
                <binding>
                    <command>property-toggle</command>
                    <property>/sim/yokes-visible</property>
                </binding>
            </key>
        </keyboard>
    </input>


</PropertyList>
