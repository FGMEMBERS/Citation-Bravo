<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--
************************************************************************
Cessna 550 Citation-Bravo
Feb 2005  Syd Adams   ()
************************************************************************
-->
<PropertyList>
  <sim>
    <description>Cessna Citation-Bravo - 3d cockpit (YASim) </description>
    <author>Syd Adams</author>
    <status>development</status>
    <flight-model>yasim</flight-model>
    <aero>Citation-Bravo-yasim</aero>
    <fuel-fraction>0.8</fuel-fraction>
    <startup>
      <splash-texture>Aircraft/Citation-Bravo/Bravo-splash.rgb</splash-texture>
    </startup>
    
    <view n="0">
      <name>Cockpit</name>
      <type>lookfrom</type>
      <internal type="bool">true</internal>
      <config>
        <x-offset-m type="double">-0.27</x-offset-m>
        <y-offset-m type="double">1.0</y-offset-m>
        <z-offset-m type="double">3.1</z-offset-m>
        <pitch-offset-deg>-12</pitch-offset-deg>
        <default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
      </config>
    </view>

    <view n="1">
      <config>
        <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
        <pitch-offset-deg>5</pitch-offset-deg>
      </config>
    </view>
    <view n="2">
      <config>
        <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
        <pitch-offset-deg>5</pitch-offset-deg>
      </config>
    </view>
    <view n="5">
      <config>
        <target-z-offset-m archive="y" type="double">6.7</target-z-offset-m>
      </config>
    </view>
    <allow-toggle-cockpit>true</allow-toggle-cockpit>
    <systems>
      <electrical>
        <path></path>
      </electrical>

      <autopilot>
        <path>Aircraft/Citation-Bravo/Citation-autopilot.xml</path>
      </autopilot>
    </systems>
    
    <sound>
      <path>Aircraft/Citation-Bravo/Citation-Bravo-sound.xml</path>
    </sound>
    
    <hud>
      <enable3d>false</enable3d>
    </hud>
    
    <virtual-cockpit archive="y">true</virtual-cockpit>
  
    <help>
      <title>Cessna Citation-Bravo</title>
      <key>
        <name>Keypad Delete</name>
        <desc>toggle thrust reversers</desc>
      </key>
    </help>


    <model>
        <path>Aircraft/Citation-Bravo/Models/Bravo.xml</path>
      <material>
        
        <instruments>
          <diffuse>
            <red type="string">1.0</red>
            <green type="string">1.0</green>
            <blue type="string">1.0</blue>
          </diffuse>
          <ambient>
            <red type="string">1.0</red>
            <green type="string">1.0</green>
            <blue type="string">1.0</blue>
          </ambient>
          <specular>
            <red type="string">0.0</red>
            <green type="string">0.0</green>
            <blue type="string">0.0</blue>
          </specular>
          <emission>
            <red type="string">0.8</red>
            <green type="string">0.8</green>
            <blue type="string">0.8</blue>
          </emission>
          <transparency>
            <alpha>1.0</alpha>
          </transparency>
          <shininess>0</shininess>
          <factor>1.0</factor>
        </instruments>

        <cabin>
          <diffuse>
            <red type="string">1.0</red>
            <green type="string">1.0</green>
            <blue type="string">1.0</blue>
          </diffuse>
          <ambient>
            <red type="string">0.2</red>
            <green type="string">0.2</green>
            <blue type="string">0.2</blue>
          </ambient>
          <specular>
            <red type="string">0.0</red>
            <green type="string">0.0</green>
            <blue type="string">0.0</blue>
          </specular>
          <emission>
            <red type="string">0.2</red>
            <green type="string">0.15</green>
            <blue type="string">0.1</blue>
          </emission>
          <transparency>
            <alpha>1.0</alpha>
          </transparency>
          <shininess>0</shininess>
          <factor>1.0</factor>
        </cabin>

        
      </material>
    </model>

    
  </sim>


  <instrumentation>
  <primus1000>
    <nav1pointer type="double">0.0</nav1pointer>
    <nav2pointer type="double">0.0</nav2pointer>
  </primus1000>
</instrumentation>

  <yasim>
    <Bravo>
      <pilot-lbs>180</pilot-lbs>
      <copilot-lbs>190</copilot-lbs>
      <passenger-lbs>700</passenger-lbs>
    </Bravo>
  </yasim>

  <nasal>
    <Bravo>
      <file>Aircraft/Citation-Bravo/Nasal/Bravo.nas</file>
      <file>Aircraft/Citation-Bravo/Nasal/electrical.nas</file>
    </Bravo>
    <kfc-200>
      <file>Aircraft/Citation-Bravo/Nasal/kfc-200.nas</file>
</kfc-200>
  </nasal>

  
  <input>
    <keyboard>
      <key n="127">
        <name>Delete</name>
        <desc>Toggle Reversers</desc>
        <binding>
          <command>nasal</command>
          <script>Bravo.ToggleReverser()</script>
        </binding>
      </key>
    </keyboard>
  </input>


</PropertyList>