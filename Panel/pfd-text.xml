<!--
Syd Adams
Primus 1000 PFD  messages
-->

<PropertyList>

    <name>PFD text</name>
    <w-base>200</w-base>
    <h-base>200</h-base>
    <w>200</w>
    <h>200</h>

    <layers>

    <layer>
            <name>VNV/FMS</name>
            <condition>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.9</red>
                <green>0.2</green>
                <blue>0.6</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>/instrumentation/primus1000/fms-mode</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>43</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>62</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>NAV/SRC</name>
            <condition>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.1</red>
                <green>0.9</green>
                <blue>0.4</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>/instrumentation/primus1000/nav-string</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>40</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-20</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>NAV/DST</name>
            <condition>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.1</red>
                <green>0.9</green>
                <blue>0.4</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>/instrumentation/primus1000/nav-dist-nm</property>
                    <format>%3.1f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>40</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-26</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>Wind Speed</name>
            <condition>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4.5</point-size>
            <color>
                <red>0.7</red>
                <green>0.7</green>
                <blue>0.3</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>environment/wind-speed-kt</property>
                    <format>%02.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-60</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-87</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <condition>
                <and>
                    <property>instrumentation/primus1000/pfd/serviceable</property>
                    <equals>
                        <property>instrumentation/primus1000/dc550/timer</property>
                        <value>0</value>
                    </equals>
                </and>
            </condition>
            <name>Ground Speed</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.1</red>
                <green>0.9</green>
                <blue>0.4</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>velocities/groundspeed-kt</property>
                    <format>% 3.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>42</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-98</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <condition>
                <and>
                    <property>instrumentation/primus1000/pfd/serviceable</property>
                    <equals>
                        <property>instrumentation/primus1000/dc550/timer</property>
                        <value>2</value>
                    </equals>
                </and>
            </condition>
            <name>ET</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.1</red>
                <green>0.9</green>
                <blue>0.4</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/clock/m877/ET-string</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>39</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-98</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <condition>
                <and>
                    <equals>
                        <property>instrumentation/primus1000/dc550/timer</property>
                        <value>1</value>
                    </equals>
                    <property>instrumentation/primus1000/pfd/serviceable</property>
                </and>
            </condition>
            <name>TTG</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.1</red>
                <green>0.9</green>
                <blue>0.4</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/primus1000/nav-time</property>
                    </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>39</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-98</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>INHG</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>5</point-size>
            <color>
                <red>0.39</red>
                <green>0.75</green>
                <blue>0.85</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/primus1000/baro-kpa</property>
                    </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>58</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-12</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>INHG mrkr</name>
            <condition>
                <not>
                    <property>instrumentation/primus1000/dc550/hpa</property>
                </not>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.8</red>
                <green>0.8</green>
                <blue>0.8</blue>
            </color>
            <chunks>
                <chunk>
                    <type>literal</type>
                    <text> IN</text>
                    </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>78</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-12</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>HPA mrkr</name>
            <condition>
                <property>instrumentation/primus1000/dc550/hpa</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.8</red>
                <green>0.8</green>
                <blue>0.8</blue>
            </color>
            <chunks>
                <chunk>
                    <type>literal</type>
                    <text>HPA</text>
                    </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>78</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-12</offset>
                </transformation>
            </transformations>
        </layer>

<!--    FD MODE ANNUNCIATORS-->

        <layer>
            <name>MINIMUMS</name>
            <condition>
                <property>instrumentation/primus1000/dc550/RA-alert</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4.5</point-size>
            <color>
                <red>0.1</red>
                <green>0.9</green>
                <blue>0.3</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>autopilot/route-manager/min-lock-altitude-agl-ft</property>
                    <format>%3.0f</format>
                </chunk>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
                <chunk>
                    <type>literal</type>
                    <text> RA</text>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>10</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-10</offset>
                </transformation>
            </transformations>
        </layer>

<!-- AP Annunciators-->

        <layer>
            <name>LAT mode</name>
            <condition>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>5</point-size>
            <color>
                <red>0.2</red>
                <green>0.8</green>
                <blue>0.3</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/flightdirector/LAT-annun</property>
                </chunk>
        </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>90</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>LAT arm mode</name>
            <condition>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>5</point-size>
            <color>
                <red>0.7</red>
                <green>0.7</green>
                <blue>0.7</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/flightdirector/LAT-arm-annun</property>
                </chunk>
        </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-50</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>90</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>VRT mode</name>
            <condition>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>5</point-size>
            <color>
                <red>0.2</red>
                <green>0.8</green>
                <blue>0.3</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/flightdirector/VRT-annun</property>
                </chunk>
        </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>10</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>90</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>VRT  sub mode</name>
            <condition>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </condition>
            <type>text</type>
            <font>arial_black</font>
            <point-size>5</point-size>
            <color>
                <red>0.7</red>
                <green>0.7</green>
                <blue>0.7</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/flightdirector/VRT-arm-annun</property>
                </chunk>
        </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>90</offset>
                </transformation>
            </transformations>
        </layer>

    </layers>

</PropertyList>