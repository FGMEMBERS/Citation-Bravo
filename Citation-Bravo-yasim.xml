<!--  Cessna Citation Bravo :

Length:        14.40 m
Wingspan:  15.75m
Cruise:  Weight / Altitude / Speed / Fuel Flow

WEIGHT (lbs)    11,000          13,000          14,500
Altitude (ft)   Speed (KTAS)/fuel flow (lbs/hr)
33,000          405/1,200         401/1,197         396/1,195
35,000          403/1,123         398/1,134         390/1,124
37,000          400/1,040         390/1,029         382/1,023
39,000          394/934              382/926          374/917
41,000          387/844              375/835          366/830
43,000          378/750             366/751         359/752

stall speed  86kt -landing configuration at 13,500 lbs;
-->

<airplane mass="8750">
    <approach speed="100" aoa="7" fuel="0.5">
        <control-setting axis="/controls/engines/engine[0]/throttle-lever" value="0.3"/>
        <control-setting axis="/controls/engines/engine[1]/throttle-lever" value="0.3"/>
        <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
        <control-setting axis="/controls/engines/engine[1]/mixture" value="1.0"/>
        <control-setting axis="/controls/flight/flaps" value="0.375"/><!--15 degree APPR/TAKEOFF-->
        <control-setting axis="/controls/gear/gear-down" value="1"/>
        <solve-weight idx="0" weight="180"/>
        <solve-weight idx="1" weight="300"/>
    </approach>

    <cruise speed="396" alt="33000" fuel="0.8">
        <control-setting axis="/controls/engines/engine[0]/throttle-lever" value="0.80"/>
        <control-setting axis="/controls/engines/engine[1]/throttle-lever" value="0.80"/>
        <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
        <control-setting axis="/controls/engines/engine[1]/mixture" value="1.0"/>
        <control-setting axis="/controls/flight/flaps" value="0.0"/>
        <control-setting axis="/controls/gear/gear-down" value="0"/>
        <solve-weight idx="0" weight="180"/>
        <solve-weight idx="1" weight="300"/>
    </cruise>

    <cockpit x="-2.75" y="0.38" z="0.91"/>
    <!-- FUSELAGE -->   
    <fuselage ax="0" ay="0" az="0.02" bx="-2.838" by="0" bz="0.514"
    width="1.60" taper="0.2" midpoint="1.0" idrag="0"/>

    <fuselage ax="-2.838" ay="0" az="0.514" bx="-8.667" by="0" bz="0.514"
    width="1.60" taper="1" midpoint="0.5" idrag="0"/>

    <fuselage ax="-8.667" ay="0" az="0.514" bx="-13.656" by="0" bz="0.870"
    width="1.60" taper="0.1" midpoint="0.0" idrag="0"/>

    <!-- Engines  -->
    <fuselage ax="-8.016" ay="1.33" az="0.893" bx="-10.336" by="1.33" bz="0.893"
    width="0.92" taper="0.5" midpoint="0.25" idrag="0"/>

    <fuselage ax="-8.016" ay="-1.33" az="0.893" bx="-10.336" by="-1.33" bz="0.893"
    width="0.92" taper="0.5" midpoint="0.25" idrag="0"/>


    <wing x="-7.29" y="0.48" z="-0.11" length="7.4" chord="2.72" 
    sweep="0" dihedral="4" taper="0.32" camber="0.025"
    incidence="2.0" twist="-1.0" idrag="2.0">
        <stall aoa="15" width="8" peak="1.5"/>
        <flap0 start="0" end=".52" lift="1.5" drag="1.9"/>
        <flap1 start=".52" end=".88" lift="1.2" drag="1.2"/>
        <spoiler start="0.0" end="0.52" lift="1.0" drag="5.0"/>
        <control-input axis="/controls/flight/flaps" control="FLAP0"/>
        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/speedbrake" control="SPOILER"/>
        <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
        <control-output control="SPOILER" prop="/surface-positions/speedbrake-pos-norm"/>
        <control-speed control="FLAP0" transition-time="5"/>
        <control-speed control="SPOILER" transition-time="1"/>
    </wing>

    <hstab x="-12.64" y="0.05" z="1.48" length="2.88" chord="1.48"
    sweep="0" dihedral="9" taper="0.53" effectiveness="1.8">
        <stall aoa="16" width="4" peak="1.5"/>
        <flap0 start="0" end="1" lift="1.7" drag="1.2"/>
        <control-input axis="/controls/flight/elevator" control="FLAP0"/>
        <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
        <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
    </hstab>
  
    <vstab x="-12.43" y="0.00" z="1.03" length="2.60" chord="2.48"
    sweep="26.5" taper="0.46" effectiveness="1.5">
        <stall aoa="16" width="4" peak="1.5"/>
        <flap0 start="0" end="1" lift="1.2" drag="1.2"/>
        <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true" square="true"/>
        <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
        <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
    </vstab>

<!--Engine pylons-->
    <vstab x="-9.56" y="1.65" z="0.878" length="0.532" chord="2.433"
    sweep="-24" taper="0.8" dihedral="2">
        <stall aoa="16" width="4" peak="1.5"/>
    </vstab>

    <vstab x="-9.56" y="-1.65" z="0.878" length="0.532" chord="2.433"
    sweep="-24" taper="0.8" dihedral="178">
        <stall aoa="16" width="4" peak="1.5"/>
    </vstab>


    <tank x="-7.18" y="1.7" z="0.1" capacity="2493" jet="true"/>
    <tank x="-7.18" y="-1.7" z="0.1" capacity="2493" jet="true"/>
    <tank x="-7.18" y="0" z="0" capacity="0" jet="true"/>
    <tank x="-7.18" y="0" z="0" capacity="0" jet="true"/>

    <gear x="-1.669" y="0.00" z="-0.964" compression=".4" retract-time="4"
    sfric="0.6" dfric="0.5">
        <control-input axis="/controls/flight/rudder" control="STEER" square="true" src0="-1.0" src1="1.0" dst0="-0.8" dst1="0.8"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="4"/>
        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
    </gear>
    
    <gear x="-7.3" y="2.8" z="-0.961" compression=".4" retract-time="4.1"
    sfric="0.6" dfric="0.5">
        <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="4.1"/>
        <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
    </gear>
    
    <gear x="-7.3" y="-2.8" z="-0.961" compression=".4" retract-time="4.2"
    sfric="0.6" dfric="0.5">
        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="4.2"/>
        <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
    </gear>
  
<!-- Pratt and Whitney Canada Inc. PW530A Turbofan
2887 lbs thrust
