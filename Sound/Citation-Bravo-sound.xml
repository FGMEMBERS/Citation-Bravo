<?xml version="1.0"?>

<PropertyList>

<fx>

    <engine>
        <name>interior engines</name>
        <path>Aircraft/Citation-Bravo/Sound/eng-int.wav</path>
        <condition>
            <property>/sim/current-view/internal</property>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[0]/fan</property>
            <factor>0.3</factor>
            <min>0.6</min>
            <max>0.8</max>
        </volume>
        <volume>
            <property>engines/engine[1]/fan</property>
            <factor>0.3</factor>
            <min>0.6</min>
            <max>0.8</max>
        </volume>
        <pitch>
            <property>engines/engine[0]/fan</property>
            <factor>0.01</factor>
            <offset>0.0</offset>
        </pitch>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <factor>0.01</factor>
            <offset>0.0</offset>
        </pitch>
        <position>
            <x>7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </engine>

    <engine>
        <name>left engine</name>
        <path>Sounds/jet.wav</path>
        <condition>
            <and>
                <not>
                    <property>controls/engines/engine[0]/cutoff</property>
                </not>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
            </and>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[0]/thrust-lbs</property>
            <factor>0.000363</factor>
            <min>0.2</min>
            <max>1.0</max>
        </volume>
        <pitch>
            <offset>1.2</offset>
        </pitch>
        <position>
            <x>10</x>
            <y>1.3</y>
            <z>1</z>
        </position>
        <orientation>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
            <inner-angle>90.0</inner-angle>
            <outer-angle>180.0</outer-angle>
            <outer-gain>0.5</outer-gain>
        </orientation>
        <reference-dist>200.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </engine>

    <engine>
        <name>left n1</name>
        <path>Aircraft/Citation-Bravo/Sound/whine.wav</path>
        <condition>
            <and>
            <greater-than>
                <property>engines/engine/fan</property>
                <value>10</value>
            </greater-than>
            <not>
                <property>sim/current-view/internal</property>
            </not>
            </and>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[0]/fan</property>
            <factor>0.005</factor>
        </volume>
        <pitch>
            <property>engines/engine/fan</property>
            <offset>0.5</offset>
            <factor>0.005</factor>
        </pitch>
        <position>
            <x>7</x>
            <y>1.3</y>
            <z>1</z>
        </position>
        <orientation>
            <x>-1.0</x>
            <y>0.0</y>
            <z>0.0</z>
            <inner-angle>70.0</inner-angle>
            <outer-angle>180.0</outer-angle>
            <outer-gain>0.2</outer-gain>
        </orientation>
        <reference-dist>5.0</reference-dist>
        <max-dist>500.0</max-dist>
    </engine>

    <engine>
        <name>right engine</name>
        <path>Sounds/jet.wav</path>
        <condition>
            <and>
                <not>
                    <property>controls/engines/engine[1]/cutoff</property>
                </not>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
            </and>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[1]/thrust-lbs</property>
            <factor>0.000363</factor>
            <min>0.2</min>
            <max>1.0</max>
        </volume>
        <pitch>
            <offset>1.2</offset>
        </pitch>
        <position>
            <x>10</x>
            <y>-1.3</y>
            <z>1</z>
        </position>
        <orientation>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
            <inner-angle>90.0</inner-angle>
            <outer-angle>180.0</outer-angle>
            <outer-gain>0.5</outer-gain>
        </orientation>
        <reference-dist>200.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </engine>

    <engine>
        <name>right n1</name>
        <path>Aircraft/Citation-Bravo/Sound/whine.wav</path>
            <condition>
            <and>
            <greater-than>
                <property>engines/engine[1]/fan</property>
                <value>10</value>
            </greater-than>
            <not>
                <property>sim/current-view/internal</property>
            </not>
            </and>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[1]/fan</property>
            <factor>0.01</factor>
        </volume>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <offset>0.5</offset>
            <factor>0.005</factor>
        </pitch>
        <position>
            <x>7</x>
            <y>-1.3</y>
            <z>1</z>
        </position>
        <orientation>
            <x>-1.0</x>
            <y>0.0</y>
            <z>0.0</z>
            <inner-angle>70.0</inner-angle>
            <outer-angle>180.0</outer-angle>
            <outer-gain>0.2</outer-gain>
        </orientation>
        <reference-dist>5.0</reference-dist>
        <max-dist>500.0</max-dist>
    </engine>

    <engine>
        <name>left reverser</name>
        <path>Sounds/exhaust_loop.wav</path>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm</property>
                <value>0</value>
            </greater-than>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>surface-positions/reverser-norm</property>
            <factor>0.5</factor>
        </volume>
        <volume>
            <property>engines/engine[0]/thrust-lbs</property>
            <factor>0.00035</factor>
            <min>0.0</min>
            <max>0.5</max>
        </volume>
        <pitch>
            <offset>1.6</offset>
        </pitch>
        <position>
            <x>12</x>
            <y>-1.50</y>
            <z>1</z>
        </position>
        <reference-dist>100.0</reference-dist>
        <max-dist>500.0</max-dist>
    </engine>

    <engine>
        <name>right reverser</name>
        <path>Sounds/exhaust_loop.wav</path>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm</property>
                <value>0</value>
            </greater-than>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>surface-positions/reverser-norm</property>
            <factor>0.5</factor>
        </volume>
        <volume>
            <property>engines/engine[1]/thrust-lbs</property>
            <factor>0.00035</factor>
            <min>0.0</min>
            <max>0.5</max>
        </volume>
        <pitch>
            <offset>1.6</offset>
        </pitch>
        <position>
            <x>12</x>
            <y>-1.50</y>
            <z>1</z>
        </position>
        <reference-dist>100.0</reference-dist>
        <max-dist>500.0</max-dist>
    </engine>

    <rumble>
        <name>rumble</name>
        <path>Aircraft/Citation-Bravo/Sound/rumble.wav</path>
        <condition>
            <or>
                <property>/gear/gear[0]/wow</property>
                <property>/gear/gear[1]/wow</property>
                <property>/gear/gear[2]/wow</property>
            </or>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>velocities/groundspeed-kt</property>
            <factor>0.1</factor>
            <min>0</min>
            <max>1.0</max>
        </volume>
        <position>
            <x>5</x>
            <y>0</y>
            <z>-1</z>
        </position>
        <reference-dist>7.0</reference-dist>
        <max-dist>20.0</max-dist>
    </rumble>

    <gear>
        <name>gear-retract</name>
        <path>Aircraft/Citation-Bravo/Sound/gear.wav</path>
        <property>gear/gear[0]/position-norm</property>
        <mode>in-transit</mode>
        <pitch>
            <property>gear/gear[0]/position-norm</property>
            <offset>0</offset>
            <factor>10.0</factor>
            <min>0</min>
            <max>1.0</max>
        </pitch>
        <position>
            <x>7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>12.0</max-dist>
    </gear>

    <gear>
        <name>gear-lock</name>
        <path>Sounds/gear-lck.wav</path>
        <mode>once</mode>
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value>0</value>
            </equals>
        </condition>
        <position>
            <x>7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>3.0</reference-dist>
        <max-dist>20.0</max-dist>
    </gear>

    <gear>
        <name>gear-thump</name>
        <path>Sounds/gear-lck.wav</path>
        <mode>once</mode>
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value>1</value>
            </equals>
        </condition>
        <position>
            <x>7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>3.0</reference-dist>
        <max-dist>20.0</max-dist>
    </gear>

    <gear>
        <name>gear-horn</name>
        <type>avionics</type>
        <path>Sounds/gear-hrn.wav</path>
        <condition>
            <property>instrumentation/alerts/gear-horn</property>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>instrumentation/alerts/gear-horn</property>
            <factor>0.5</factor>
        </volume>
        <position>
            <x>2.5</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>3</reference-dist>
        <max-dist>6.0</max-dist>
    </gear>

    <squeal>
        <name>squeal</name>
        <path>Sounds/squeal2.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/speed-down-fps</property>
            <factor>0.05</factor>
        </volume>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.02</factor>
        </volume>
         <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.0025</factor>
            <offset>0.6</offset>
        </pitch>
        <position>
            <x>5</x>
            <y>0</y>
            <z>-2</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>100.0</max-dist>
    </squeal>

    <flap>
        <name>flaps</name>
        <path>Aircraft/Citation-Bravo/Sound/flaps.wav</path>
        <property>/surface-positions/flap-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/Cvolume</property>
            <factor>0.5</factor>
        </volume>
        <position>
            <x>7</x>
            <y>0</y>
            <z>-1</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>20.0</max-dist>
    </flap>

    <speedbrake>
        <name>speedbrake</name>
        <path>Aircraft/Citation-Bravo/Sound/flaps.wav</path>
        <property>surface-positions/speedbrake-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/Cvolume</property>
            <factor>0.3</factor>
        </volume>
        <pitch>
            <offset>1.5</offset>
        </pitch>
        <position>
            <x>7</x>
            <y>0</y>
            <z>-1</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </speedbrake>


    <click>
        <name>click-off</name>
        <type>avionics</type>
        <path>Sounds/click.wav</path>
        <condition>
                <not>
                    <property>sim/sound/click</property>
                </not>
        </condition>
    </click>

    <click>
        <name>click-on</name>
        <type>avionics</type>
        <path>Sounds/click.wav</path>
        <condition>
            <property>sim/sound/click</property>
        </condition>
    </click>

</fx>

</PropertyList>
